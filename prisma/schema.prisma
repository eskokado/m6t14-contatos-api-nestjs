// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id       String    @id
  name     String
  email    String    @unique
  password String
  contacts Contact[]

  @@map("customers")
}

model Contact {
  id         String   @id
  name       String
  email      String   @unique
  password   String
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String

  @@map("contacts")
}
