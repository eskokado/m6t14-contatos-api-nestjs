// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String    @id
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  contacts  Contact[]

  @@map("customers")
}

model Contact {
  id         String   @id
  name       String
  email      String   @unique
  password   String
  customer   Customer @relation(fields: [customerId], references: [id])
  createdAt  DateTime @default(now())
  customerId String

  @@map("contacts")
}
