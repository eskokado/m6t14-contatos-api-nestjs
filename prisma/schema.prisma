// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String          @id
  name      String
  email     String          @unique
  password  String
  createdAt DateTime        @default(now())
  contacts  Contact[]
  phones    PhoneCustomer[]

  @@map("customers")
}

model Contact {
  id         String         @id
  name       String
  email      String         @unique
  password   String
  customer   Customer       @relation(fields: [customerId], references: [id])
  createdAt  DateTime       @default(now())
  customerId String
  phones     PhoneContact[]

  @@map("contacts")
}

model PhoneCustomer {
  id         String   @id
  name       String
  phone      String
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])
}

model PhoneContact {
  id        String  @id
  name      String
  phone     String
  contactId String
  contact   Contact @relation(fields: [contactId], references: [id])
}
